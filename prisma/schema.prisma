generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

datasource db {
    provider = "postgresql"
    url      = env("ENV_PRISMA_URL")
}

model species {
    id               String    @id @default(uuid())
    scientificName   String    @default("")
    commonName       String    @default("")
    volumeM3         Int       @default(0)
    sectionsVolumeM3 Int       @default(0)
    trees            tree[]
    sections         section[]
}

model tree {
    id               String    @id @default(uuid())
    number           Int
    scientificName   String
    commonName       String
    range            Int       @default(0)
    dap              Int       @default(0)
    meters           Int       @default(0)
    volumeM3         Int       @default(0)
    sectionsVolumeM3 Int       @default(0)
    sections         section[]
    species          species   @relation(fields: [specie_id], references: [id])
    specie_id        String
}

model section {
    id        String         @id @default(uuid())
    number    String         @default("")
    section   String         @default("")
    d1        Int            @default(0)
    d2        Int            @default(0)
    d3        Int            @default(0)
    d4        Int            @default(0)
    meters    Int            @default(0)
    volumeM3  Int            @default(0)
    tree      tree           @relation(fields: [tree_id], references: [id])
    tree_id   String
    species   species?       @relation(fields: [specie_id], references: [id])
    specie_id String?
    batches   batchSection[]
    createdAt DateTime       @default(now())
    updatedAt DateTime?       @updatedAt 
}

model batch {
    id        String         @id @default(uuid())
    volumeM3  Int            @default(0)
    sections  batchSection[]
    createdAt DateTime       @default(now())
    updatedAt DateTime       @updatedAt
}

model batchSection {
    id         String   @id @default(uuid())
    section    section? @relation(fields: [section_id], references: [id])
    section_id String?
    batch      batch?   @relation(fields: [batch_id], references: [id])
    batch_id   String?
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@index([section_id, batch_id])
}
